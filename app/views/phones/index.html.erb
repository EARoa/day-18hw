<center>

  <h1>Listing phones</h1>

<%= link_to root_path do %>
<p> Home </p>
<% end %>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Brand</th>
      <th>Photo</th>
      <th>Price</th>
      <th>In Stock</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<br />

  <tbody>
    <% @phones.each do |phone| %>
      <tr>
        <td><%= phone.name %></td>
        <td><%= phone.brand %></td>
        <td><%= image_tag phone.photo_url, class: 'thumb'%></td>
        <td><%= phone.price %></td>
        <td><%= phone.instock %></td>
        <td><%= link_to 'Show', phone %></td>
        <td><%= link_to 'Edit', edit_phone_path(phone) %></td>
        <td><%= link_to 'Remove', phone, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Phone', new_phone_path %>
</center>
